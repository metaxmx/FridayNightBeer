# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET     /                           @controllers.Application.appPage
GET     /randomUUID                 @controllers.Application.randomUUID
GET     /getsettings                @controllers.Application.getSettings

# Virtual Pages
GET     /login                      @controllers.Application.appPage

# Authentication
GET      /authentication/info       @controllers.Authentication.getAuthInfo
POST     /authentication/login      @controllers.Authentication.login
POST     /authentication/logout     @controllers.Authentication.logout

# User management API
#GET     /users                      @controllers.Users.findUsers
#POST    /user                       @controllers.Users.createUser
#PUT     /user/:firstName/:lastName  @controllers.Users.updateUser(firstName: String, lastName: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
