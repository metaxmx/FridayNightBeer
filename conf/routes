# Routes
# This file defines all application routes (Higher priority routes first)
#
# ~~~~

# Single endpoint for serving AngularJS
GET     /                             @controllers.ApplicationController.appPage
GET     /randomUUID                   @controllers.ApplicationController.randomUUID

# Virtual Pages
GET     /login                        @controllers.ApplicationController.appPage
GET     /forum/:id                    @controllers.ApplicationController.showForumPage(id: String)
GET     /forum/:id/newtopic           @controllers.ApplicationController.showNewTopicPage(id: String)
GET     /topic/:id                    @controllers.ApplicationController.showTopicPage(id: String)
GET     /admin/forum/configure        @controllers.ApplicationController.appPage

# Files
GET     /avatar/:id                   @controllers.DownloadController.downloadAvatar(id: String)
GET     /uploads/:id/:filename        @controllers.DownloadController.downloadPostUpload(id: String, filename: String)

# Authentication
GET     /api/1/authentication/info    @controllers.AuthenticationController.getAuthInfo
POST    /api/1/authentication/login   @controllers.AuthenticationController.login
POST    /api/1/authentication/logout  @controllers.AuthenticationController.logout

# Index / List Forums
GET     /api/1/forums/list            @controllers.ForumsController.getForums

# Show Forum
GET     /api/1/forum/:id              @controllers.ForumsController.showForum(id: String)

# Configure Forums
GET     /api/1/forums/configure       @controllers.ForumsController.getConfigureForums

# Show Topic
GET     /api/1/topic/:id              @controllers.TopicController.showTopic(id: String)
POST    /api/1/topic/:id              @controllers.TopicController.insertPost(id: String)

# New Topic
GET     /api/1/newtopic/:id           @controllers.TopicController.showNewTopic(id: String)
POST    /api/1/newtopic/:id           @controllers.TopicController.newTopic(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 @controllers.Assets.at(path="/public", file)
