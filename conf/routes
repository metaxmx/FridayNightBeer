# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET     /                           @controllers.Application.appPage
GET     /randomUUID                 @controllers.Application.randomUUID

# Virtual Pages
GET     /login                      @controllers.Application.appPage
GET     /forum/:id                  @controllers.Application.showForumPage(id: Int)
GET     /forum/:id/newtopic         @controllers.Application.showNewTopicPage(id: Int)
GET     /topic/:id                  @controllers.Application.showTopicPage(id: Int)

# Files
GET     /avatar/:id                 @controllers.DownloadController.downloadAvatar(id: Int)
GET     /uploads/:id/:filename      @controllers.DownloadController.downloadPostUpload(id: Int, filename: String)

# Authentication
GET     /api/authentication/info    @controllers.AuthenticationController.getAuthInfo
POST    /api/authentication/login   @controllers.AuthenticationController.login
POST    /api/authentication/logout  @controllers.AuthenticationController.logout

# Index / List Forums
GET     /api/forums/list            @controllers.ForumsController.getForums

# Show Forum
GET     /api/forum/:id              @controllers.ForumsController.showForum(id: Int)

# Show Topic
GET     /api/topic/:id              @controllers.TopicController.showTopic(id: Int)
POST    /api/topic/:id              @controllers.TopicController.insertPost(id: Int)

# New Topic
GET     /api/newtopic/:id           @controllers.TopicController.showNewTopic(id: Int)
POST    /api/newtopic/:id           @controllers.TopicController.newTopic(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
