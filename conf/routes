# Routes
# This file defines all application routes (Higher priority routes first)
#
# ~~~~

# ------ Application Entrypoints -------

# Single endpoint for serving AngularJS
GET     /                               @controllers.ApplicationController.appPage

# Virtual Pages
GET     /login                          @controllers.ApplicationController.loginPage
GET     /register                       @controllers.ApplicationController.registerPage
GET     /forum/:id                      @controllers.ApplicationController.showForumPage(id: String)
GET     /forum/:id/newthread            @controllers.ApplicationController.showNewTopicPage(id: String)
GET     /thread/:id                     @controllers.ApplicationController.showTopicPage(id: String)
GET     /admin/forum/configure          @controllers.ApplicationController.appPage

# Files
GET     /avatar/:id                     @controllers.DownloadController.downloadAvatar(id: String)
GET     /uploads/:id/:filename          @controllers.DownloadController.downloadPostUpload(id: String, filename: String)

# ------- REST API 1.0 ---------

# Authentication
GET     /api/1.0/authentication         @rest.api_1_0.controllers.AuthenticationController.getAuthenticationStatus
POST    /api/1.0/authentication         @rest.api_1_0.controllers.AuthenticationController.login
DELETE  /api/1.0/authentication         @rest.api_1_0.controllers.AuthenticationController.logout

# Registration
POST    /api/1.0/register               @rest.api_1_0.controllers.AuthenticationController.register

# Index / List Forums
GET     /api/1.0/forums                 @rest.api_1_0.controllers.ForumsController.getForums

# Show Forum
GET     /api/1.0/forum/:id              @rest.api_1_0.controllers.ForumsController.showForum(id: String)

# Configure Forums
#GET     /api/1.0/forums/configure       @rest.api_1_0.controllers.ForumsController.???

# Show Topic
GET     /api/1.0/thread/:id             @rest.api_1_0.controllers.ThreadController.showThread(id: String)
POST    /api/1.0/thread/:id             @rest.api_1_0.controllers.ThreadController.createPost(id: String)

# New Topic
GET     /api/1.0/newthread/:id          @rest.api_1_0.controllers.ForumsController.showForumHead(id: String)
POST    /api/1.0/newthread/:id          @rest.api_1_0.controllers.ThreadController.createThread(id: String)

# ------ Static Resources -------

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   @controllers.Assets.versioned(path="/public", file: Asset)
