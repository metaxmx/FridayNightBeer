# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET     /                           @controllers.Application.appPage
GET     /randomUUID                 @controllers.Application.randomUUID

# Virtual Pages
GET     /login                      @controllers.Application.appPage

# Authentication
GET     /api/authentication/info    @controllers.Authentication.getAuthInfo
POST    /api/authentication/login   @controllers.Authentication.login
POST    /api/authentication/logout  @controllers.Authentication.logout

# Settings
GET     /api/settings               @controllers.Application.getSettings

# Index / List Forums
GET     /api/forums/list            @controllers.ForumsController.getForums

# User management API
#GET     /users                      @controllers.Users.findUsers
#POST    /user                       @controllers.Users.createUser
#PUT     /user/:firstName/:lastName  @controllers.Users.updateUser(firstName: String, lastName: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
